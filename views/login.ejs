<body class="text-center">

  <main class="form-signin w-100 m-auto">
    <form id="reg-form" method="POST" action="/login" novalidate>
      <img class="bi me-2" width="60" src="images/Tufffy-logo.png" />
      <h1 class="h3 mb-3 fw-normal">Sign in</h1>

      <% if (locals.errorMessage) { %>
        <div class="text-danger">
          <%= locals.errorMessage %>
        </div>
        <% } %>

          <div class="form-floating">
            <input name="username" type="text" class="form-control" id="username" placeholder="Username">
            <label for="floatingInput" id="username-label">Username</label>
          </div>
          <div class="form-floating">
            <input name="password" type="password" class="form-control" id="password" placeholder="Password">
            <label for="floatingPassword" id="password-label">Password</label>
          </div>

          <div class="checkbox mb-3">
            <label>
              Don't have an account? <a href="/register" class="text-decoration-underline fw-bold text-dark">Sign
                up.</a>
            </label>
          </div>
          <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
          <p class="mt-5 mb-3 text-muted">&copy; 2023 TuffyAsks, Inc</p>
    </form>
  </main>

  <script>
    const regForm = document.getElementById('reg-form');
    const username = document.getElementById('username');
    const usernameLabel = document.getElementById('username-label');
    const password = document.getElementById('password');
    const passwordLabel = document.getElementById('password-label');
    const submitBtn = document.getElementById('submit-btn');
    const emailRegex = /^[a-zA-Z0-9._-]{3,}@((csu\.)?fullerton\.edu)$/;

    regForm.addEventListener('submit', (e) => {
      if (!regForm.checkValidity()) {
        e.preventDefault();
      }

      if (username.value == null || username.value == '') {
        username.classList.remove("is-valid");
        username.classList.add("is-invalid");
        usernameLabel.textContent = "Please enter a valid username";
        usernameLabel.classList.add("text-danger");
        e.preventDefault();
      } else {
        username.classList.remove("is-invalid");
        username.classList.add("is-valid");
        usernameLabel.textContent = "Username";
        usernameLabel.classList.remove("text-danger");
      }

      if (password.value == null || password.value.length == 0) {
        password.classList.remove("is-valid");
        password.classList.add("is-invalid");
        passwordLabel.textContent = "Please enter a valid password";
        passwordLabel.classList.add("text-danger");
        e.preventDefault();
        
      } else {
        password.classList.remove("is-invalid");
        password.classList.add("is-valid");
        passwordLabel.textContent = "Password";
        passwordLabel.classList.remove("text-danger");
      }
    });
  </script>

